<metal:main use-macro="load: blankmaster.pt">
    <metal:content fill-slot="title">
        <metal:content define-slot="title"/>
    </metal:content>
    <metal:content fill-slot="css">
        <metal:content define-slot="css"/>
    </metal:content>
    <metal:content fill-slot="javascript">
        <metal:content define-slot="javascript"/>
    </metal:content>

<metal:content fill-slot="content">
<!-- #section:basics/navbar.layout -->
<div id="navbar" class="navbar navbar-default" style="background-color: #e6e4e3">
    <script type="text/javascript">
        try {
            ace.settings.check('navbar', 'fixed')
        } catch (e) {
        }
    </script>

    <div class="navbar-container" id="navbar-container">
        <!-- #section:basics/sidebar.mobile.toggle -->
        <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
            <span class="sr-only">Toggle sidebar</span>

            <span class="icon-bar"></span>

            <span class="icon-bar"></span>

            <span class="icon-bar"></span>
        </button>

        <!-- /section:basics/sidebar.mobile.toggle -->
        <div class="navbar-header pull-left">
            <!-- #section:basics/navbar.layout.brand -->
            <a href="${request.route_url('home')}" class="navbar-brand">
                <small style="color: #e6c11f">
                    <i class="fa fa-database"></i>
                    LightBase
                </small>
            </a>

            <!-- /section:basics/navbar.layout.brand -->

            <!-- #section:basics/navbar.toggle -->

            <!-- /section:basics/navbar.toggle -->
        </div>

    </div>
    <!-- /.navbar-container -->
</div>

<!-- /section:basics/navbar.layout -->
<div class="main-container" id="main-container">


    <!-- /Login Page -->
    <div class="main-content">
        <div class="main-content-inner">
            <!-- #login-form -->
  
            <img src="${request.route_url('home')}../static/img/lbsideimage.png"/>
         
      <form class="form-signin">

        <div class="divLeft" style="font-size: large">Faça seu Login</div>
        <div class="divRight"> <a class="aLB" href="#">➔ Não tenho registro</a></div>
        
        <div style="clear: both">E-mail ou nome de usuário</div>
        
        <label for="inputEmail" class="sr-only">E-mail ou nome de usuário</label>
        <input type="email" id="inputEmail" class="form-control" required autofocus>
        
        <div>Senha</div>
        <label for="inputPassword" class="sr-only">Senha</label>
        <input type="password" id="inputPassword" class="form-control" required>
        
        <div>
	        <a class="aLB" href="#" style="background-color: #e6c11f">Esqueci a minha senha</a>
        </div>
        
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Continuar logado
          </label>
          <button class="loginButton" type="submit" >login</button>
        </div>
      
      </form>
            <!-- /section:basics/content.login-form -->
            <div class="page-content">
              
            </div>
            <!-- /.page-content -->
        </div>
    </div>
    <!-- /.main-content -->

    <div class="footer">
        <div class="footer-inner">
            <!-- #section:basics/footer -->
            <div class="footer-content">
						<span class="bigger-120">
							<span class="black bolder">LightBase</span>
							&copy; 2014-2015
						</span>
                &nbsp; &nbsp;
            </div>

            <!-- /section:basics/footer -->
        </div>
    </div>

    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
        <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
    </a>
</div>
<!-- /.main-container -->

<!-- basic scripts -->

</metal:content>

</metal:main>